{
  "name": "todo-project",
  "version": "1.0.0",
  "description": "Simple fullstack todo project",
  "main": "index.ts",
  "author": "Edward Rees",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev:server": "nodemon src/index.ts",
    "server": "node dist/index.js",
    "build": "tsc",
    "web": "npm run dev --prefix web",
    "start": "concurrently -n \"server,web\" -c \"#ff0000,#00ff00\" -k \"yarn server\" \"yarn web\"",
    "deploy:setup": "pm2 deploy pm2.config.js production setup",
    "deploy": "pm2 deploy pm2.config.js production deploy"
  },
  "dependencies": {
    "@prisma/client": "^4.0.0",
    "@tsconfig/node16": "^1.0.3",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.0.1",
    "bcrypt": "^5.0.1",
    "concurrently": "^7.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "nodemon": "^2.0.18",
    "prisma": "^4.0.0",
    "typescript": "^4.6.4"
  },
  "devDependencies": {
    "pm2": "^5.2.0"
  }
}
